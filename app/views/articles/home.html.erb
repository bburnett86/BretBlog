<div class = "container">
  <div class = "jumbotron col-md-12 center">
    <div class = "header">
      Art To Tech
    </div>
    <div>
      <%= image_tag("me.png", id: "mainImg") %>
    </div>
    <div id="mainOptions">
      <div class="col-md-4">
        <p><%= link_to "About Me", about_me_path %></p>
      </div>
      <div class="col-md-4">
        <p><a href = '/blogs' id= "blogIndexLink">Blogs </a></p>
        <% if logged_in? && current_user.admin === true %>
        <p>
          <%= link_to 'Archive', articles_path %>
        </p>
        <% end %>
      </div>
      <div class="col-md-4">
        <p><%= link_to "Projects", projects_path %></p>
      </div>
    </div>
  </div>
</div>
